<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer.MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:hint="Nombre del ejercicio"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/exerciseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:hint="Fecha del ejercicio"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/exerciseDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:hint="Duracion del ejercicio"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/exerciseCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:hint="CalorÃ­as quemadas"
        android:inputType="text" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:autofillHints="Categoria"
        android:background="@color/design_default_color_error"
        android:minHeight="48dp"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_send"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:onClick="sendMessage"
        android:textColor="@color/black"
        android:background="@color/design_default_color_primary_variant"
        android:hint="Guardar"
        android:text="Guardar" />

</LinearLayout>